<div>
  <h1 class="font-bold text-4xl">Posts#index</h1>
  <p>Find me in app/views/posts/index.html.erb</p>
</div>

<div class="flex flex-col gap-4">
  <% @posts.each do |post| %>
    <%= link_to post_path(post) do %>
      <div>
        <p><%= post.title %></p>
        <p><%= post.content %></p>
      </div>
    <% end %>
  <% end %>
</div>
